{
    "compilerOptions": {
      "target": "es2022",
      "module": "commonjs",
      "rootDir": "./src",
      "outDir": "dist",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "baseUrl": "..",
      "paths": {
        "*": ["offchain-profile/node_modules/*"],
        "../../shared/*": ["shared/*"],
        "../../../shared/*": ["shared/*"]
      }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist", "tests/**/*", "../shared/**/*.test.ts", "../shared/**/*.spec.ts"]
  }
